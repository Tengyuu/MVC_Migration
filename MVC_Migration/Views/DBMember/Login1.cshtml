
@{
    ViewData["Title"] = "Login1";
}

@if (TempData["Message"] != null)
{
    <script>alert('@TempData["Message"]');</script>
}

<h2>帳號登入</h2>

<form action="@Url.Action("Login1")" method="post">
    <p>Account(Id): @Html.TextBox("Id", "", new { @class = "form-control" })</p>
    <p>Password(Name):@Html.TextBox("Name", "", new { @class = "form-control" })</p>
    <button type="submit" class="btn btn-info">登入</button>
</form>
